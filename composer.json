{
    "name": "maileryio/mailery",
    "type": "project",
    "description": "Basic Mailery project template",
    "keywords": [
        "mail",
        "mailer",
        "mailery"
    ],
    "homepage": "https://github.com/maileryio/mailery",
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/maileryio/mailery",
        "issues": "https://github.com/maileryio/mailery/issues",
        "wiki": "https://github.com/maileryio/mailery/wiki"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4",
        "cycle/proxy-factory": "^1.2",
        "foxy/foxy": "^1.0",
        "maileryio/mailery-brand": "dev-master",
        "maileryio/mailery-dashboard": "dev-master",
        "maileryio/mailery-icon-material": "dev-master",
        "maileryio/mailery-menu-navbar": "dev-master",
        "maileryio/mailery-menu-sidebar": "dev-master",
        "maileryio/mailery-rbac": "dev-master",
        "maileryio/mailery-subscriber": "^1.0@dev",
        "maileryio/mailery-user": "dev-master",
        "maileryio/mailery-web": "^1.0@dev",
        "maileryio/widget-link": "^1.0",
        "nyholm/psr7": "^1.2",
        "psr/log": "^1.1",
        "yiisoft/event-dispatcher": "^3.0@dev",
        "yiisoft/i18n": "^3.0@dev",
        "yiisoft/i18n-formatter-intl": "^3.0@dev",
        "yiisoft/i18n-message-gettext": "^3.0@dev",
        "yiisoft/i18n-translator": "^3.0@dev",
        "yiisoft/log": "^3.0@dev",
        "yiisoft/log-target-file": "^3.0@dev",
        "yiisoft/yii-cycle": "^3.0@dev",
        "yiisoft/yii-debug": "^3.0@dev",
        "yiisoft/yii-web": "^3.0@dev"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phan/phan": "^2.4",
        "phpunit/phpunit": "^9.0",
        "vlucas/phpdotenv": "^3.6",
        "yiisoft/composer-config-plugin": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Mailery\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Mailery\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix --diff --dry-run",
        "fix": "php-cs-fixer fix",
        "phan": "phan --progress-bar -o analysis.txt",
        "post-update-cmd": [
            "Mailery\\Installer::postUpdate"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "config-plugin": {
            "common": "config/common.php",
            "providers": "config/providers.php",
            "params": [
                "config/params.php",
                "?config/params-local.php"
            ],
            "console": [
                "$common",
                "config/console.php"
            ],
            "web": [
                "$common",
                "config/web.php"
            ]
        },
        "config-plugin-output-dir": "runtime/build/config"
    },
    "config": {
        "foxy": {
            "enabled": true,
            "manager": "yarn"
        },
        "sort-packages": true
    }
}
