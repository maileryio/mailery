{
    "name": "maileryio/mailery",
    "type": "library",
    "description": "Basic Mailery project template",
    "keywords": [
        "mail",
        "mailer",
        "mailery"
    ],
    "homepage": "https://github.com/maileryio/mailery",
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/maileryio/mailery",
        "issues": "https://github.com/maileryio/mailery/issues",
        "wiki": "https://github.com/maileryio/mailery/wiki"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4",
        "maileryio/mailery-backend": "^1.0",
        "nyholm/psr7": "^1.2",
        "psr/log": "^1.1",
        "yiisoft/log": "^3.0@dev",
        "yiisoft/log-target-file": "^3.0@dev",
        "yiisoft/yii-web": "^3.0@dev"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "hiqdev/composer-config-plugin": "^1.0",
        "phan/phan": "^2.4",
        "phpunit/phpunit": "^9.0",
        "vlucas/phpdotenv": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Mailery\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mailery\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix --diff --dry-run",
        "fix": "php-cs-fixer fix",
        "phan": "phan --progress-bar -o analysis.txt"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "config-plugin": {
            "defines": "config/defines.php",
            "params": [
                "config/params.php"
            ],
            "common": "config/common.php",
            "console": [
                "$common",
                "config/console.php"
            ],
            "web": [
                "$common",
                "config/web.php"
            ],
            "backend": [
                "$web",
                "config/backend.php"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
